<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="10dip">

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="@string/str_commons_user_username"
        android:textColor="@color/colorTextLight"
        android:textSize="@dimen/textH1"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="@string/str_commons_user_dob"
        android:textColor="@color/colorTextLight"
        android:textSize="@dimen/textH2"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="@string/str_commons_user_address"
        android:textColor="@color/colorTextLight"
        android:textSize="@dimen/textH3"
        android:textStyle="bold" />

</LinearLayout>