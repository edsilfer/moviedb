<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dip"
    android:background="@android:color/transparent"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dip" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dip"
        android:layout_marginTop="30dip"
        android:layout_toEndOf="@+id/icon"
        android:background="@android:color/transparent"
        android:fontFamily="sans-serif"
        android:shadowColor="@color/textSecondaryShadow"
        android:shadowRadius="@integer/rsc_text_border_radius"
        android:text="@string/rsc_snack_loading_label"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textH3"
        android:textStyle="bold" />

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/loading"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dip"
        android:layout_toEndOf="@+id/content"
        android:textColor="@android:color/white"
        app:indicator="LineScale" />

    <TextView
        android:id="@+id/action"
        style="?attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dip"
        android:fontFamily="sans-serif-medium"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textH1" />
</RelativeLayout>